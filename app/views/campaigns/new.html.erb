



<%= simple_form_for  @campaign do |f| %>
  <%= f.input :title, placeholder: "Example: March's Newsletter, One-Day Sale" %>
  <%= f.input :purpose, placeholder: 'Marketing, Newsletter, Press Release, Survey, Invitation, Thank you' %>
  <%= f.submit "Start campaign",  class: "button small", id: "submiting" %>
<% end %>
